{
    "name": "utube-workspace",
    "version": "1.0.0",
    "description": "Unified workflow for uTube project",
    "scripts": {
        "backend": "python -m uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000",
        "frontend": "npm run dev --prefix frontend",
        "media": "node rtmp-server/server.js",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run media\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}